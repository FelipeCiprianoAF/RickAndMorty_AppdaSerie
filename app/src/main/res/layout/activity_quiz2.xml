<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundooo"
    tools:context=".quiz2">

    <TextView
        android:id="@+id/txt_pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="39dp"
        android:fontFamily="sans-serif-medium"
        android:text="Quem apresentou maior potencial ?"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_opa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoretxt_3" />

    <Button
        android:id="@+id/btn_opb"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="sans-serif-black"
        android:onClick="checarResposta"
        android:text="B - Morty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_opa" />

    <Button
        android:id="@+id/btn_opa"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="sans-serif-black"
        android:text="A - Summer Smith"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnhome_" />

    <Button
        android:id="@+id/btnhome_"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="#00FFFFFF"
        android:onClick="abreMenu"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconSize="40dp"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imgtopo4"
        android:layout_width="159dp"
        android:layout_height="41dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toEndOf="@+id/btnhome_"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobranca2" />

    <Button
        android:id="@+id/btn_opc"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="sans-serif-black"
        android:text="C - Jerry Smith (???)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_opb" />

    <TextView
        android:id="@+id/scoretxt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="174dp"
        android:fontFamily="sans-serif-black"
        android:text="Score: 0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtopo4" />

</androidx.constraintlayout.widget.ConstraintLayout>